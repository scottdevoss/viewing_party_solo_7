<%= "Create Viewing Party For: #{@movie.movie_details.title}" %><br>

<%= form_with url: "/users/#{@user.id}", method: :post do |form| %>
  <%= form.label "Length of the Party" %>
  <%= form.number_field :duration, value: @movie.movie_details.runtime, min: @movie.movie_details.runtime %><br>
  <%= form.label "When is the Party?" %>
  <%= form.date_field :date %><br>
  <%= form.label "What time does it start?" %>
  <%= form.time_field :start_time %><br>
  <%= "Invite Other Users:" %><br>
  <% @users.each do |user| %>
    <%= form.label "#{user.name}" %>
    <%= form.check_box "#{user.name}", { multiple: true }, user.id, nil %>
  <% end %><br>
  <%= form.submit "Create Party" %>
<% end %>